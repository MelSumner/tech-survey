<div role="radiogroup" aria-labelledby={{this.model.question}}>
  <p class="question-text" id={{this.model.question}}>{{this.model.question}}</p>
  {{#if this.model.content}}
    <p class="text-help">{{this.model.content}}</p>
  {{/if}}
  {{#each options as |option|}}
    <div class="form-check">
      <input 
        type="radio" 
        id="rating-{{option}}" 
        name={{model.questionName}}
        checked={{eq answerValue option}} 
        onchange={{action 'changed' option}}
      >
      <label for="rating-{{option}}">{{option}}</label>
    </div>
  {{/each}}
</div>
